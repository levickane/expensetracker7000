$.ajax({
        url:"/profiledata",
method:"GET"    }).then(function(data){
console.log(data);

const profileData = {
    name: [data[0].name, data[1].name],
    amount: [data[0].amount, data[1].amount]
}

let lineChart = $('#lineChart').html();
let lineChartScript = Handlebars.compile(lineChart);
let linehtml = lineChartScript(profileData);
$(document.body).append(linehtml);

var ctx = document.getElementById('myChart').getContext('2d');
var chart = new Chart(ctx, {
   type: 'line',
   data: {
      labels:  profileData.name, 
      datasets: [
        {
          label: "Order Amount",
          fill: false,
          lineTension: 0,
          borderColor: "#0d6efd",
          data:  [profileData.amount] 
        }
      ]
   } 
});
})